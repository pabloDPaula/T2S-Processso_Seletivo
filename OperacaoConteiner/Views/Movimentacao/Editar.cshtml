@using OperacaoConteiner.Models.Enums

@model MovimentacaoModel
@{
    ViewData["Title"] = "Editar Movimentação";
}

<div class="text-center">
    <h1>Editar Movimentação</h1>
</div>
<form asp-controller="Movimentacao" asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="IdContainer"/>
    <input type="hidden" asp-for="Id"/>
  <div class="form-group">
    <label asp-for="tipoMovimentação">Tipo</label>
    <select asp-for="tipoMovimentação" class="form-control" id="tipo"  asp-items="@(new SelectList(Enum.GetValues(typeof(TipoMovimentacao))))"></select>
  </div>
  <div class="form-group">
    <label asp-for="DataInicio">Data de Inicio</label>
    <input asp-for="DataInicio" class="form-control" id="dataInicio">
  </div>
   <div class="form-group">
    <label asp-for="DataFim">Data do término</label>
    <input asp-for="DataFim" class="form-control" id="dataFim">
  </div>
  <button type="submit" class="btn btn-success">Alterar</button>
  <a class="btn btn-secondary" asp-controller="Movimentacao" asp-action="index" role="button" >Voltar</a>
</form>